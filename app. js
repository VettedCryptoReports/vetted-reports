function getRiskColor(risk) { if (risk === "HIGH") return "#f85149"; if (risk === "MEDIUM") return "#d29922"; if (risk === "LOW") return "#3fb950"; return "#8b949e"; }

function renderCards(data) { var container = document.getElementById("cardsContainer"); container.innerHTML = "";

if (data.length === 0) { container.innerHTML = '<div style="text-align:center;color:#8b949e;padding:60px 20px;font-size:16px;">No reports found</div>'; return; }

for (var i = 0; i < data.length; i++) { var r = data[i]; var riskColor = getRiskColor(r.risk); var cardId = "details-" + i;

var card = document.createElement("div"); card.style.cssText = "background:#161b22;border:1px solid #30363d;border-radius:12px;padding:24px;margin-bottom:16px;cursor:pointer;transition:border-color 0.2s;"; card.onmouseover = function() { this.style.borderColor = "#00ff88"; }; card.onmouseout = function() { this.style.borderColor = "#30363d"; };

card.innerHTML = '<div style="display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:12px;">' + '<div style="display:flex;align-items:center;gap:12px;">' + '<div style="font-size:20px;font-weight:700;color:#e6edf3;">@' + r.handle + '</div>' + '<div style="background:#21262d;color:#8b949e;padding:2px 10px;border-radius:20px;font-size:12px;font-weight:600;">' + r.type + '</div>' + '</div>' + '<div style="display:flex;align-items:center;gap:16px;">' + '<div style="font-size:28px;font-weight:800;color:#00ff88;">' + r.score + '/10</div>' + '<div style="background:' + riskColor + '22;color:' + riskColor + ';padding:4px 14px;border-radius:20px;font-size:13px;font-weight:700;border:1px solid ' + riskColor + '44;">' + r.risk + '</div>' + '<div style="color:#484f58;font-size:18px;" id="arrow-' + i + '">â–¼</div>' + '</div>' + '</div>' + '<div id="' + cardId + '" style="display:none;margin-top:20px;border-top:1px solid #21262d;padding-top:20px;">' + '<div style="margin-bottom:16px;"><div style="color:#f85149;font-weight:600;font-size:13px;text-transform:uppercase;letter-spacing:1px;margin-bottom:8px;">ðŸš¨ Red Flags</div><div style="color:#c9d1d9;font-size:14px;line-height:1.6;">' + r.redFlags + '</div></div>' + '<div style="margin-bottom:16px;"><div style="color:#3fb950;font-weight:600;font-size:13px;text-transform:uppercase;letter-spacing:1px;margin-bottom:8px;">âœ… Positives</div><div style="color:#c9d1d9;font-size:14px;line-height:1.6;">' + r.positives + '</div></div>' + '<div style="margin-bottom:16px;"><div style="color:#58a6ff;font-weight:600;font-size:13px;text-transform:uppercase;letter-spacing:1px;margin-bottom:8px;">ðŸ“‹ Summary</div><div style="color:#c9d1d9;font-size:14px;line-height:1.6;">' + r.summary + '</div></div>' + '<div style="color:#484f58;font-size:12px;margin-top:12px;">Report date: ' + r.date + '</div>' + '</div>';

(function(id, idx) { card.onclick = function() { var el = document.getElementById(id); var arrow = document.getElementById("arrow-" + idx); if (el.style.display === "none") { el.style.display = "block"; arrow.textContent = "â–²"; } else { el.style.display = "none"; arrow.textContent = "â–¼"; } }; })(cardId, i);

container.appendChild(card); } }

function updateStats(data) { document.getElementById("totalReports").textContent = data.length; var total = 0; var highRisk = 0; for (var i = 0; i < data.length; i++) { total += data[i].score; if (data[i].risk === "HIGH") highRisk++; } document.getElementById("avgScore").textContent = data.length > 0 ? (total / data.length).toFixed(1) + "/10" : "â€”"; document.getElementById("highRiskCount").textContent = highRisk; }

function filterReports() { var query = document.getElementById("searchInput").value.toLowerCase().trim(); var filtered = []; for (var i = 0; i < reports.length; i++) { if (reports[i].handle.toLowerCase().indexOf(query) !== -1) { filtered.push(reports[i]); } } renderCards(filtered); updateStats(filtered); }

document.getElementById("searchInput").addEventListener("input", filterReports);

renderCards(reports); updateStats(reports);

