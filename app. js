function escapeHTML(str) { var div = document.createElement('div'); div.textContent = str; return div.innerHTML; }

function renderCards(reports) { var container = document.getElementById('cardsContainer'); if (reports.length === 0) { container.innerHTML = '<div class="no-results">No reports found.</div>'; return; } var html = ''; for (var i = 0; i < reports.length; i++) { var r = reports[i]; html += '<div class="card" id="card-' + i + '">' + '<div class="card-header" onclick="toggleCard(' + i + ')">' + '<div class="card-left">' + '<span class="handle">@' + escapeHTML(r.handle) + '</span>' + '<span class="type-badge">' + escapeHTML(r.type) + '</span>' + '<span class="score-badge">ðŸ“Š ' + escapeHTML(r.score) + '</span>' + '<span class="risk-badge risk-' + r.risk + '">' + r.risk + '</span>' + '</div>' + '<span class="expand-icon">â–¼</span>' + '</div>' + '<div class="card-body">' + '<div class="section"><div class="section-title">ðŸš¨ Red Flags</div><div class="section-text">' + escapeHTML(r.concerns) + '</div></div>' + '<div class="section"><div class="section-title">âœ… Positives</div><div class="section-text">' + escapeHTML(r.positives) + '</div></div>' + '<div class="section"><div class="section-title">ðŸ“‹ Summary</div><div class="section-text">' + escapeHTML(r.summary) + '</div></div>' + '<div class="date-text">Vetted: ' + escapeHTML(r.date) + '</div>' + '</div></div>'; } container.innerHTML = html; }

function toggleCard(i) { document.getElementById('card-' + i).classList.toggle('expanded'); }

document.getElementById('searchInput').addEventListener('input', function() { var q = this.value.toLowerCase().trim(); var filtered = []; if (q) { for (var i = 0; i < allReports.length; i++) { if (allReports[i].handle.toLowerCase().indexOf(q) !== -1) filtered.push(allReports[i]); } } else { filtered = allReports; } renderCards(filtered); });

renderCards(allReports);
